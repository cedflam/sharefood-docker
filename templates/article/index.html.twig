{% extends 'base.html.twig' %}

{% block title %}ShareFood - Produits{% endblock %}

{% block body %}
<!-- Page Content -->
<div class="container-fluid products">
    <div class="container " style="padding-top: 150px;">
        <div class="container ">
            {% for label, messages in app.flashes %}
                <div class=" container-fluid col-md-6 mt-3 text-center">
                    <div class="alert alert-{{ label }} ">
                        {% for message in messages %}
                            <p>
                                {{message | raw}}
                            </p>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
            <!-- Page Heading -->
            <div class="row">
                {% for article in articles %}
                    {% if date(article.expiratedAt) > date() %}
                        <div class="col-lg-4 col-sm-6 mb-4">

                            <div class="card h-100">
                                <a href="#"><img class="card-img-top" src="uploads/images/{{ article.image }}"
                                                 alt=""></a>
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <a href="#" class="badge badge-primary">{{ article.productName }}</a>
                                        <a class="badge badge-danger ml-1 float-right"
                                           href="{{ path('article_delete', {'id': article.id}) }}"><i
                                                    class="fas fa-trash"></i></a>
                                        <a class="badge badge-warning float-right"
                                           href="{{ path('article_edit', {'id': article.id}) }}"> <i
                                                    class="fas fa-pen"></i></a>
                                        <p class="text-sm-left">
                                        <h6>Par, {{ article.user.firstName }} de {{ article.location }}</h6>{#TODO: FirstName plus petit#}
                                        </p>
                                        <p>
                                        <h6>Date de p√©remption
                                            : {{ article.expiratedAt | date('d/m/Y', "Europe/Paris") }}</h6>
                                        </p>

                                    </h4>
                                    <p class="card-text">{{ article.description }}</p>
                                </div>

                            </div>

                        </div>
                    {% endif %}
                {% endfor %}
                <div class="container" style="padding-bottom: 350px;">
                    <!-- Pagination -->
                    <ul class="pagination justify-content-center">
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">1</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">2</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">3</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>
                    </ul>

                </div>
            </div>
            <!-- /.container -->
        </div>

    </div>
    {% endblock %}
