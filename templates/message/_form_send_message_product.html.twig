<!-- /.container -->
<div class="p-3 text-center">
    {% if article.messages[0].userTarget is defined and  app.user == article.messages[0].userTarget %}
        <h4> Message à {{ article.messages[0].user.firstName }}</h4>
    {% else %}
        <h4> Message à {{ article.user.firstName }}</h4>
    {% endif %}
</div>
<div class="container pl-5 pr-5">
    {{ form_start(form, {'action': path('message_product', { 'id': article.id })}) }}
    {{ form_widget(form) }}
    <input type="submit" value="Envoyer" class="btn btn-primary mb-5">
    <button type="button" class="btn btn-secondary mb-5" data-dismiss="modal">Annuler</button>
    {{ form_end(form) }}
</div>

